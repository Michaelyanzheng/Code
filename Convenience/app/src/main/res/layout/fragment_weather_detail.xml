<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="#484E61"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/city_name"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/refresh_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="30sp"
                android:textColor="#71ff46"
                android:text="@string/Refresh"
                android:background="@drawable/background_refresh"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:background="#27A5F9"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/publish_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center"
                android:textSize="40sp"
                android:layout_above="@+id/weather_info_layout"
                android:text="Load to ..."
                android:id="@+id/loadTo_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/weather_info_layout"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/current_date"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>

                <TextView
                    android:id="@+id/weather_desp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="40sp"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"/>

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/temp1"
                        android:layout_gravity="center_vertical"
                        android:textColor="#fff"
                        android:textSize="40sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#fff"
                        android:textSize="40sp"
                        android:text="~"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/temp2"
                        android:layout_gravity="center_vertical"
                        android:textColor="#fff"
                        android:textSize="40sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>